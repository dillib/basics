# Database
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/basicstutor

# Redis (for job queue)
# Optional: defaults to redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Authentication (Google OAuth)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Authorized Redirect URI: http://localhost:5000/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Secret
# Generate with: openssl rand -base64 32
# CRITICAL: Use a strong random value in production
SESSION_SECRET=generate_with_openssl_rand_base64_32

# Admin Access
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Payments (Stripe)
# Keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_/sk_test_) for development
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Webhook Secret from: https://dashboard.stripe.com/webhooks
# Endpoint to add: http://localhost:5000/api/stripe/webhook (for local testing)
# Events to listen for: checkout.session.completed
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AI Integration (Gemini)
# Key from: https://aistudio.google.com/app/apikey
# Use either GOOGLE_API_KEY or AI_INTEGRATIONS_GEMINI_API_KEY
GOOGLE_API_KEY=your_gemini_api_key_here
# AI_INTEGRATIONS_GEMINI_API_KEY=your_gemini_api_key_here
# AI_INTEGRATIONS_GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Pricing Configuration (in cents)
# Optional: defaults shown below
TOPIC_PRICE_CENTS=199
PRO_ANNUAL_PRICE_CENTS=9900

# Quiz Configuration
# Optional: defaults shown below
QUIZ_PASSING_SCORE=70
QUESTIONS_PER_QUIZ=5

# Limits
# Optional: defaults shown below
FREE_TOPICS_LIMIT=1

# Application
NODE_ENV=development
PORT=5000
